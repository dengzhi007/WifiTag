<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/create_wifi_tag_backgound"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <FrameLayout
        android:id="@+id/top_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_gravity="center_vertical"
	    android:background="@color/green"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/create_tag_main_backward"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|center_vertical"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/backward"/>
	
	    <TextView
	        android:id="@+id/create_tag_title"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:textSize="20dp"
	        android:textColor="@color/white"
	        android:text="@string/create_wifi_tag" />
    </FrameLayout>

    <TextView
	    android:id="@+id/create_tag_tips"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:textSize="20dp"
	    android:textColor="@color/green"
	    android:gravity="center"
	    android:text="@string/create_tag_tips"/>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/ap_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="80dp"/>

</LinearLayout>