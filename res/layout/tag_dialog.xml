<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingLeft="40dp"
    android:background="@drawable/mytag_dialog_background">
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <ImageView android:src="@drawable/mytag_dialog_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView android:id="@+id/mytag_name"
	        android:layout_width="0dp"
	        android:textColor="@color/green"
	        android:textSize="20dp"
	        android:layout_weight="5"
	        android:padding="20dp"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView android:src="@drawable/mytag_dialog_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView android:id="@+id/mytag_ssid"
	        android:layout_width="0dp"
	        android:textColor="@color/green"
	        android:textSize="20dp"
	        android:layout_weight="5"
	        android:padding="20dp"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView android:src="@drawable/mytag_dialog_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView android:id="@+id/mytag_createtime"
	        android:layout_width="0dp"
	        android:textColor="@color/green"
	        android:textSize="20dp"
	        android:layout_weight="5"
	        android:padding="20dp"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView android:src="@drawable/mytag_dialog_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView android:id="@+id/mytag_mode"
	        android:layout_width="0dp"
	        android:textColor="@color/green"
	        android:textSize="20dp"
	        android:layout_weight="5"
	        android:padding="20dp"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    
	<Button android:id="@+id/btn_sure"
	    android:layout_width="150dp"
	    android:layout_height="50dp"
	    android:gravity="center"
	    android:layout_gravity="center"
	    android:background="@drawable/mytag_dialog_ok"/>    

</LinearLayout>