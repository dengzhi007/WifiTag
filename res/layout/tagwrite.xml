<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:orientation="vertical"    android:background="@drawable/tagwrite_background">        <FrameLayout android:id="@+id/tagwrite_topbar"        android:background="@drawable/tagwrite_topbar"        android:layout_height="50dp"        android:layout_width="wrap_content">            </FrameLayout>   <LinearLayout android:layout_width="120dp"       android:layout_height="50dp"       android:orientation="vertical"       android:gravity="left">       <ImageView android:id="@+id/tagwrite_mode"           android:src="@drawable/tagwrite_tips_personal"	       android:layout_width="match_parent"	       android:layout_height="match_parent"	       android:layout_gravity="left"	       android:scaleType="centerInside"       />    </LinearLayout>       <LinearLayout android:orientation="vertical"       android:layout_width="wrap_content"       android:layout_height="wrap_content"       android:gravity="center"       android:layout_gravity="center"       android:paddingTop="30dp"       >       <LinearLayout android:orientation="horizontal"           android:layout_width="wrap_content"           android:layout_height="wrap_content">           <ImageView android:src="@drawable/tagwrite_icon_wifi"               android:layout_height="40dp"               android:layout_width="0dp"               android:layout_weight="1"/>           <TextView android:id="@+id/tagwrite_ssid"               android:layout_height="match_parent"               android:layout_width="0dp"               android:layout_weight="5"               android:gravity="center"               android:textColor="@color/green"               android:textSize="30dp"               android:paddingLeft="20dp"               android:text="xxxxx"/>       </LinearLayout>              <LinearLayout android:orientation="horizontal"           android:layout_width="wrap_content"           android:layout_height="wrap_content">           <ImageView android:src="@drawable/tagwrite_icon_pw"               android:layout_height="40dp"               android:layout_width="0dp"               android:layout_weight="1"/>           <TextView android:id="@+id/tagwrite_password"               android:layout_height="match_parent"               android:layout_width="0dp"               android:layout_weight="5"               android:gravity="center"               android:textColor="@color/green"               android:paddingLeft="20dp"               android:textSize="30dp"               android:text="xxxxx"/>       </LinearLayout>              <LinearLayout android:orientation="vertical"           android:layout_width="wrap_content"           android:layout_height="wrap_content">           <ImageView android:src="@drawable/tagwrite_logo"               android:layout_width="180dp"           	   android:layout_height="180dp"           	   android:layout_gravity="center"/>           <TextView android:layout_height="wrap_content"               android:layout_width="wrap_content"               android:gravity="center"               android:textColor="@color/green"               android:text="请先点击'开始写入',然后将智能贴轻触于手机背面"/>           <Button android:id="@+id/tagwrite_start"               android:background="@drawable/tagwrite_button_write"               android:layout_height="50dp"               android:layout_width="230dp"               android:gravity="center"               android:layout_gravity="center"/>       </LinearLayout>          </LinearLayout>   </LinearLayout>