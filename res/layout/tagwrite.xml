<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:orientation="vertical"    android:background="@color/white">    <!--     <FrameLayout android:id="@+id/tagwrite_topbar"        android:background="@drawable/tagwrite_topbar"        android:layout_height="50dp"        android:layout_width="wrap_content">        <View android:id="@+id/backward"            android:layout_width="100dp"            android:layout_height="50dp"/>    </FrameLayout> -->        <RelativeLayout android:layout_width="fill_parent"            android:layout_height="50dp"            android:background="@color/green">        <LinearLayout android:id="@+id/backward"                android:layout_height="match_parent"                android:layout_alignParentLeft="true"                android:layout_width="50dp">                <ImageView 	                android:layout_height="35dp"	                android:layout_width="match_parent"	                android:layout_gravity="center"	                android:src="@drawable/backward"	                />         </LinearLayout>                 <TextView	            android:layout_width="wrap_content"	            android:layout_height="match_parent"	            android:layout_centerInParent="true"	            android:gravity="center"	            android:textColor="@color/white"	            android:textSize="20dp"	            android:text="写入智能贴"	            />    </RelativeLayout>       <LinearLayout android:layout_width="120dp"       android:layout_height="50dp"       android:orientation="vertical"       android:gravity="left">       <ImageView android:id="@+id/tagwrite_mode"           android:src="@drawable/tagwrite_tips_personal"	       android:layout_width="match_parent"	       android:layout_height="match_parent"	       android:layout_gravity="left"	       android:scaleType="centerInside"       />    </LinearLayout>       <LinearLayout android:orientation="vertical"       android:layout_width="wrap_content"       android:layout_height="wrap_content"       android:gravity="center"       android:layout_gravity="center"       android:paddingTop="30dp"       >       <LinearLayout android:orientation="vertical"           android:layout_width="wrap_content"           android:layout_height="wrap_content">           <ImageView android:src="@drawable/tagwrite_logo"               android:layout_width="180dp"           	   android:layout_height="180dp"           	   android:layout_gravity="center"/>           <TextView android:layout_height="wrap_content"               android:layout_width="wrap_content"               android:gravity="center"               android:textColor="@color/green"               android:typeface="sans"               android:text="请先点击'开始写入'，然后将智能贴轻触于手机背面"               android:paddingBottom="20dp"               android:paddingTop="20dp"/>           <Button android:id="@+id/tagwrite_start"               android:background="@color/green"               android:layout_height="50dp"               android:layout_width="230dp"               android:gravity="center"               android:textSize="20dp"               android:layout_gravity="center"               android:textColor="@color/white"               android:text="准备写入"/>       </LinearLayout>          </LinearLayout>   </LinearLayout>