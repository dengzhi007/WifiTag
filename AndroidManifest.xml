<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qihoo.wifitag"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
    
    <!-- WIFI connect begin -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- WIFI connect end -->

    
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.NoTitleBar">
        
        <activity
            android:name=".WifiTagActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
<!--             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.readtag"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            
        </activity>
        
        <activity
            android:name=".GoodbyeActivity"
            android:label="@string/app_name" >
        </activity>
        
        <!-- WIFI connect beg -->
        <activity
            android:name=".ConnectWifiDemo"
            android:label="@string/app_name" >
        </activity>
        
        <service android:name=".WifiClearConfigService"></service>
        <!-- WIFI connect end -->
        
        <!-- create WIFI tag begin -->
    	<activity android:name=".CreateWifiTagActivity">
    	    <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    	</activity>
    	<activity
            android:name=".CreateWifiTagInputPwdActivity"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    	
    	<!-- create WIFI tag end -->
        
        <activity
            android:name=".TestSlideMenuActivity">
            
        </activity>
        
        <activity android:name=".MyWifiTagsActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.mytag"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".WriteTagActivity">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
            
    </application>

</manifest>